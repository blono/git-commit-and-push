{
    "name": "git-commit-and-push",
    "displayName": "Git Commit & Push",
    "description": "Do git commit and push.",
    "icon": "images/icon.png",
    "version": "0.0.1",
    "publisher": "blono",
    "repository": {
        "type": "git",
        "url": "https://github.com/blono/git-commit-and-push"
    },
    "engines": {
        "vscode": "^1.62.0"
    },
    "license": "MIT",
    "categories": [
        "Other"
    ],
    "keywords": [
        "git",
        "commit",
        "push"
    ],
    "activationEvents": [
        "onCommand:git-commit-and-push.commitAndPush"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "git-commit-and-push.commitAndPush",
                "title": "Commit & Push",
                "category": "Git",
                "icon": "$(repo-force-push)"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "git-commit-and-push.commitAndPush",
                    "when": "config.git.enabled && !git.missing && gitOpenRepositoryCount != 0"
                }
            ],
            "scm/title": [
                {
                    "command": "git-commit-and-push.commitAndPush",
                    "group": "navigation@1",
                    "when": "scmProvider == git"
                },
                {
                    "command": "git-commit-and-push.commitAndPush",
                    "group": "inline",
                    "when": "scmProvider == git"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.62.0",
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "eslint": "^8.1.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.3",
        "typescript": "^4.4.4",
        "@vscode/test-electron": "^1.6.2"
    }
}
